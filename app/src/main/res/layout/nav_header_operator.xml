<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFoto"
        android:layout_width="@dimen/_75"
        android:layout_height="@dimen/_75"
        android:src="@drawable/ic_logo"
        android:scaleType="centerInside"
        android:padding="2dp"
        android:layout_marginTop="@dimen/h2"
        android:layout_marginStart="@dimen/h2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textApps"
        android:layout_below="@+id/imgFoto"
        style="@style/textStandardWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h2"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h5"
        android:text="@string/sistem_manajemen_disiplin_dan_kinerja_asn"
        android:textColor="@color/black"
        android:textSize="@dimen/text_h2"
        android:textAlignment="textStart"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textJenisUser"
        android:layout_toEndOf="@+id/imgFoto"
        style="@style/textStandardWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontFamily="@font/roboto_regular"
        android:text="@string/operator"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_h3"
        android:layout_marginStart="@dimen/h2"
        android:layout_marginEnd="@dimen/h2"
        />
    <View
        android:background="@color/gray1"
        android:layout_marginTop="@dimen/h2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textApps"
        />
</androidx.appcompat.widget.LinearLayoutCompat>