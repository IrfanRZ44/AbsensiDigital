<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bangkep.sistemabsensi.ui.pegawai.about.AboutFragment">
    <data>
        <variable
            name="viewModel"
            type="com.bangkep.sistemabsensi.ui.pegawai.about.AboutViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/CustomTheme"
        snackbar="@{viewModel.message}"
        android:padding="@dimen/h2"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_150"
            android:layout_height="@dimen/_150"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h5"
            android:layout_marginBottom="@dimen/h2"
            android:padding="@dimen/h2"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/sistem_manajemen_disiplin_dan_kinerja_asn"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h6"
            android:textAlignment="center"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            app:fontFamily="@font/roboto_regular"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textKabupaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/kab_banggai_kepulauan"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h6"
            android:textAlignment="center"
            android:layout_below="@+id/textAppName"
            android:layout_marginTop="@dimen/_30"
            android:layout_centerHorizontal="true"
            app:fontFamily="@font/roboto_regular"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textVersi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h6"
            android:textAlignment="center"
            android:layout_below="@+id/textKabupaten"
            android:layout_marginTop="@dimen/_30"
            android:layout_centerHorizontal="true"
            app:fontFamily="@font/roboto_regular"
            />

        <include
            android:id="@+id/progress"
            layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/h2"
            visible="@{viewModel.isShowLoading}"
            android:visibility="gone"
            />

    </RelativeLayout>
</layout>
