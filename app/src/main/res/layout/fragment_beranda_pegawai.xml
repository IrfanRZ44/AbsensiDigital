<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.bangkep.sistemabsensi.ui.pegawai.beranda.BerandaPegawaiFragment"
    >
    <data>
        <variable
            name="viewModel"
            type="com.bangkep.sistemabsensi.ui.pegawai.beranda.BerandaPegawaiViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray5"
        android:theme="@style/CustomTheme"
        snackbar="@{viewModel.message}"
        >
        <include
            android:id="@+id/progress"
            layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/h2"
            android:visibility="gone"
            visible="@{viewModel.isShowLoading}"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/_100"
            android:layout_height="@dimen/_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40"
            android:layout_marginBottom="@dimen/h2"
            android:padding="@dimen/h2"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h2"
            android:layout_marginBottom="@dimen/h1"
            android:fontFamily="@font/roboto_regular"
            android:text="@={viewModel.message}"
            showTextStatus="@{viewModel.message}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h3"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMain"
            style="@style/cardView"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/h2"
            android:layout_below="@+id/textStatus"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lnAbsen"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDatang"
                        style="@style/buttonStandardBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawableTop="@drawable/ic_datang_white"
                        android:drawablePadding="@dimen/h2"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/h5"
                        android:padding="@dimen/h2"
                        android:text="@string/datang"
                        android:textColor="@color/white"
                        android:onClick="@{()-> viewModel.onClickDatang()}"
                        enableButton="@{viewModel.isDatang}"
                        android:enabled="false"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPulang"
                        style="@style/buttonStandardBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawableTop="@drawable/ic_pulang_white"
                        android:drawablePadding="@dimen/h2"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/h5"
                        android:padding="@dimen/h2"
                        android:text="@string/pulang"
                        android:textColor="@color/white"
                        android:onClick="@{()-> viewModel.onClickPulang()}"
                        enableButton="@{viewModel.isPulang}"
                        android:enabled="false"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApel"
                    style="@style/buttonStandardBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_apel_white"
                    android:drawablePadding="@dimen/h2"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/h5"
                    android:paddingTop="@dimen/h2"
                    android:paddingBottom="@dimen/h2"
                    android:paddingStart="@dimen/margin_large"
                    android:paddingEnd="@dimen/margin_large"
                    android:text="@string/apel"
                    android:textColor="@color/white"
                    android:onClick="@{()-> viewModel.onClickApel()}"
                    visible="@{viewModel.isApel}"
                    android:layout_below="@+id/lnAbsen"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
