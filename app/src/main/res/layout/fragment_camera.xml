<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bangkep.sistemabsensi.ui.pegawai.camera.CameraFragment">
    <data>
        <variable
            name="viewModel"
            type="com.bangkep.sistemabsensi.ui.pegawai.camera.CameraViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        snackbar="@{viewModel.message}"
        >
        <FrameLayout
            android:id="@+id/framePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/frame_camera"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_30"
            android:layout_marginEnd="@dimen/_30"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/_120"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/fabRotate"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/h5"
            android:src="@drawable/ic_rotate_black"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:tint="@color/black"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/fabFoto"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_camera_black"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:tint="@color/black"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/fabFlash"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/h5"
            android:src="@drawable/ic_flash_on_black"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:tint="@color/black"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</layout>