<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.bangkep.sistemabsensi.ui.pegawai.absenDatang.AbsenDatangFragment"
    >
    <data>
        <variable
            name="viewModel"
            type="com.bangkep.sistemabsensi.ui.pegawai.absenDatang.AbsenDatangViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray5"
        android:theme="@style/CustomStyle"
        snackbar="@{viewModel.message}"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/_100"
            android:layout_height="@dimen/_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40"
            android:layout_marginBottom="@dimen/h2"
            android:padding="@dimen/h2"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h2"
            android:layout_marginBottom="@dimen/h1"
            android:fontFamily="@font/roboto_regular"
            android:text="@={viewModel.message}"
            showTextStatus="@{viewModel.message}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h2"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardInput"
            style="@style/cardView"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/h2"
            android:layout_below="@+id/textStatus"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etUsernameReferal"
                    style="@style/customEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/h2"
                    android:hint="@string/nip"
                    android:textColorHint="@color/gray2"
                    android:enabled="false"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textStandardWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_username_gray"
                        android:drawablePadding="@dimen/h2"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:text="@={viewModel.savedData.getDataUser().username}"
                        android:textSize="@dimen/text_h3"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFoto"
                    style="@style/cardView"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_150"
                    android:layout_height="@dimen/_200"
                    android:layout_marginBottom="@dimen/h5"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_150"
                            android:layout_height="@dimen/_160"
                            android:background="@color/gray12"
                            android:src="@drawable/ic_camera_white"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/imgFoto"
                            android:scaleType="centerCrop"
                            imageBoxSrc="@{viewModel.foto.toString()}"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:text="@string/foto"
                            android:layout_marginTop="@dimen/h2"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAbsen"
            style="@style/buttonStandardBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardInput"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_send_white"
            android:drawablePadding="@dimen/h2"
            android:layout_margin="@dimen/h2"
            android:paddingTop="@dimen/h3"
            android:paddingBottom="@dimen/h3"
            android:paddingStart="@dimen/h5"
            android:paddingEnd="@dimen/h5"
            android:text="@string/kirim"
            android:textColor="@color/white"
            android:onClick="@{()-> viewModel.onClickAbsen()}"
            android:enabled="false"
            />
        <include layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            visible="@{viewModel.isShowLoading}"
            android:id="@+id/progress"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</layout>
