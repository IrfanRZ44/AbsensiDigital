<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bangkep.sistemabsensi.ui.general.profil.ProfilFragment">
    <data>
        <variable
            name="viewModel"
            type="com.bangkep.sistemabsensi.ui.general.profil.ProfilViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray5"
        android:theme="@style/CustomStyle"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h2"
            android:layout_marginBottom="@dimen/h2"
            android:fontFamily="@font/roboto_regular"
            android:text="@={viewModel.message}"
            showTextStatus="@{viewModel.message}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h3"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textStatus"
            snackbar="@{viewModel.message}"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMain"
                    style="@style/cardView"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/h2"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/h2"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgFoto"
                            android:layout_width="@dimen/_100"
                            android:layout_height="@dimen/_100"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/h2"
                            android:padding="@dimen/h2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_logo"
                            imageSrc="@{viewModel.foto.toString()}"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/h2"
                            android:layout_marginTop="@dimen/h3"
                            android:layout_marginRight="@dimen/h2"
                            android:hint="@string/nama_lengkap"
                            android:textColorHint="@color/gray2"
                            app:errorEnabled="true"
                            errorText="@{viewModel.etNama}"
                            android:layout_below="@+id/textStatus"
                            app:errorTextAppearance="@style/error_appearance"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/textStandardWhite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_username_gray"
                                android:drawablePadding="@dimen/h2"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:text="@={viewModel.etNama}"
                                android:textSize="@dimen/text_h3"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/h2"
                            android:layout_marginRight="@dimen/h2"
                            android:hint="@string/email"
                            android:textColorHint="@color/gray2"
                            app:errorEnabled="true"
                            errorText="@{viewModel.etEmail}"
                            android:layout_below="@+id/textStatus"
                            app:errorTextAppearance="@style/error_appearance"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/textStandardWhite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_email_gray"
                                android:drawablePadding="@dimen/h2"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:text="@={viewModel.etEmail}"
                                android:textSize="@dimen/text_h3"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:textColorHint="@color/gray2"
                            android:layout_marginLeft="@dimen/h2"
                            android:layout_marginRight="@dimen/h2"
                            app:helperTextEnabled="true"
                            app:helperText="@string/let_value_empty"
                            app:errorTextAppearance="@style/error_appearance"
                            app:endIconMode="password_toggle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/textStandardWhite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="textPassword"
                                android:drawableStart="@drawable/ic_password_gray"
                                android:drawablePadding="@dimen/h2"
                                android:maxLines="1"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h3"
                                android:text="@={viewModel.etPassword}"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/konfirmasi_password"
                            android:textColorHint="@color/gray2"
                            android:layout_marginLeft="@dimen/h2"
                            android:layout_marginRight="@dimen/h2"
                            android:layout_marginTop="@dimen/h2"
                            app:helperTextEnabled="true"
                            app:helperText="@string/let_value_empty"
                            app:errorTextAppearance="@style/error_appearance"
                            app:endIconMode="password_toggle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/textStandardWhite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:drawableStart="@drawable/ic_password_gray"
                                android:drawablePadding="@dimen/h2"
                                android:maxLines="1"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h3"
                                android:text="@={viewModel.etConfirmPassword}"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSave"
                            style="@style/buttonStandardBlue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginEnd="@dimen/h2"
                            android:layout_marginTop="@dimen/h3"
                            android:padding="@dimen/h3"
                            android:text="@string/simpan"
                            android:textColor="@color/white"
                            android:onClick="@{()-> viewModel.onClickSave()}"
                            disableButton="@{viewModel.isShowLoading}"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_300"
                    android:background="@android:color/transparent"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
        <include
            android:id="@+id/progress"
            layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/h2"
            visible="@{viewModel.isShowLoading}"
            android:visibility="gone"
            />

    </RelativeLayout>
</layout>
